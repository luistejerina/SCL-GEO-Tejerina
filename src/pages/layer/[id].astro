---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import DetailCard from '../../components/DetailCard.astro';

export async function getStaticPaths(){

    const layers = await getCollection('layers');

    return layers.map((layer)=>({
        params: { id: layer.slug},
        props: { layer}
    }))
};

const { layer } = Astro.props
const { data } = layer
const { name,status, description,image } = data
---

<Layout>
    <DetailCard title={name} description={description} status={status} hasLayers="false" image={image}></DetailCard>
</Layout>